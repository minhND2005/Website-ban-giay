@{
    ViewData["Title"] = "🛍️ Danh Sách Sản Phẩm";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["mess"] != null)
{
    <div class="alert alert-warning">
        @TempData["mess"]
    </div>
}

@if (ViewData["mess1"] != null)
{
    <div class="alert alert-info">
        @ViewData["mess1"]
    </div>
}

@if (ViewData["NotFound"] != null)
{
    <div class="alert alert-danger">
        @ViewData["NotFound"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Form tìm kiếm sản phẩm -->
<form method="get" asp-action="Index" asp-controller="SanPhamCT">
    <div class="form-group">
        <input type="text" name="name" class="form-control" placeholder="Nhập tên sản phẩm để tìm kiếm..." value="@ViewBag.Name" />
    </div>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>
<a asp-action="Create" asp-controller="SanPhamCT" class="btn btn-warning btn-sm">Thêm sản phẩm</a>



<!-- Bảng hiển thị danh sách sản phẩm -->
<table class="table table-bordered table-hover mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên Sản Phẩm</th>
            <th>Ảnh</th>
            <th>Giá</th>
            <th>Số Lượng Tồn</th>
            <th>Màu Sắc</th>
            <th>Kích Thước</th>
            <th>Hãng Sản Xuất</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int index = 1;
            @foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.TenSp</td>
                    <td>
                        <img src="~/img/@item.Img" alt="Hình ảnh" style="width: 200px; height: auto;" />
                    </td>
                    <td>@(item.Gia?.ToString("N0", new System.Globalization.CultureInfo("vi-VN")) + " ₫" ?? "Chưa cập nhật")</td>
                    <td>@item.SoluongTon</td>
                    <td>@Html.DisplayFor(modelItem => item.MauSac.TenMau)</td>
                    <td>@Html.DisplayFor(modelItem => item.size.SizeName)</td>
                    <td>@Html.DisplayFor(modelItem => item.HangSanXuat.NameHSX)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdSPCT" class="btn btn-warning btn-sm">Sửa</a>
                        @using (Html.BeginForm("AddGioHang", "SanPhamCT", FormMethod.Post))
                        {
                            @Html.Hidden("id", item.IdSPCT) <!-- Thay yourIdValue bằng giá trị id thực tế -->
                            <div class="form-group">
                                <label for="soLuong" class="control-label">Số lượng:</label>
                                <input type="number" name="soLuong" id="soLuong" class="form-control" required min="1" />
                            </div>
                            <div class="form-group">

                                <input type="submit" value="Thêm vào giỏ hàng" class="btn btn-primary" />
                            </div>
                        }
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">Không có sản phẩm nào!</td>
            </tr>
        }
    </tbody>
</table>

<!-- Phân trang -->
<nav aria-label="Page navigation" class="mt-4">
    <ul class="pagination justify-content-center">
        @if (ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-name="@ViewBag.Name" asp-route-page="@(ViewBag.CurrentPage - 1)">Trang trước</a>
            </li>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-name="@ViewBag.Name" asp-route-page="@i">@i</a>
            </li>
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-name="@ViewBag.Name" asp-route-page="@(ViewBag.CurrentPage + 1)">Trang sau</a>
            </li>
        }
    </ul>
</nav>
