@model WebApplication1.Models.HoaDon

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>HoaDon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHD" />
            <div class="form-group">
                <label asp-for="HoaDonName" class="control-label"></label>
                <!-- Hiển thị nhưng không cho chỉnh sửa -->
                <input asp-for="HoaDonName" class="form-control" readonly />
                <span asp-validation-for="HoaDonName" class="text-danger"></span>
                <input type="hidden" asp-for="HoaDonName" /> <!-- Ẩn để gửi dữ liệu -->
            </div>

            <div class="form-group">
                <label asp-for="GiaBan" class="control-label"></label>
                <!-- Hiển thị nhưng không cho chỉnh sửa -->
                <input asp-for="GiaBan" class="form-control" readonly value="@Model.GiaBan.ToString("0.##")" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
                <input type="hidden" asp-for="GiaBan" value="@Model.GiaBan" />
            </div>

            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="Chờ xử lý">Chờ xử lý</option>
                    <option value="Đã hoàn tất">Đã hoàn tất</option>
                    <option value="Đã bị hủy">Đã bị hủy</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NgayLap" class="control-label"></label>
                <!-- Hiển thị nhưng không cho chỉnh sửa -->
                <input asp-for="NgayLap" class="form-control" readonly />
                <span asp-validation-for="NgayLap" class="text-danger"></span>
                <input type="hidden" asp-for="NgayLap" /> <!-- Ẩn để gửi dữ liệu -->
            </div>

            <div class="form-group">
                <label asp-for="IdAcc" class="control-label"></label>
                <!-- Hiển thị nhưng không cho chỉnh sửa -->
                <input asp-for="IdAcc" class="form-control" readonly />
                <span asp-validation-for="IdAcc" class="text-danger"></span>
                <input type="hidden" asp-for="IdAcc" /> <!-- Ẩn để gửi dữ liệu -->
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
